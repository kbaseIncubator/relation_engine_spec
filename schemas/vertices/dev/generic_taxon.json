{
  "$schema": "http://json-schema.org/draft-xxx/schema#",
  "type": "object",
  "description": "Template for a vertex entry in the NCBI or GTDB taxonomy tree.",
  "required": ["_key", "source", "scientific_name", "rank"],
  "properties": {
    "_key": {
      "type": "string",
      "description": "Taxon type abbreviation plus name",
      "examples": ["d:Bacteria", "p:Firmicutes"]
    },
    "source": {
      "type": "string",
      "title": "Taxonomy source",
      "examples": ["NCBI", "GTDB"]
    },
    "scientific_name": {
      "type": "string",
      "title": "Taxon name.",
      "examples": ["Methylophilus methylotrophus", "Bacteria", "Firmicutes"]
    },
    "canonical_scientific_name": {
      "type": "array",
      "title": "Canonicalized scientific name",
      "examples": [ [ "methylophilus", "methylotrophus" ], 
                    ["Bacteria"], 
                    ["Firmicutes"]
                  ],
      "items": { "type": "string" }
    },
    
    "aliases": {
      "type": "array",
      "description": "Aliases",
      "examples": [ 
                    [ {"category": "authority", 
                       "name": "Borreliella burgdorferi (Johnson et al. 1984) Adeolu and Gupta 2015",
                       "canonical": ["borreliella", "burgdorferi", "johnson", "adeolu", "gupta" ]},
                      {"category": "genbank common name", 
                       "name":"Lyme disease spirochet",
                       "canonical": ["lyme", "disease", "spirochet"] },
                      {"category":"synonym", 
                       "name":"Borrelia burgdorferi",
                       "canonical": [ "borrelia", "burgdorferi" ]} 
                       ],

                    [ {"category": "common name",
                       "name": "E. coli",
                       "canonical": ["e", "coli"] },
                      {"category": "authority", 
                       "name": "\"Bacterium coli commune\" Escherich 1885",
                       "canonical": ["bacterium", "coli", "commune", "escherich"] },
                      {"category": "synonym",
                       "name": "Bacterium coli",
                       "canonical": ["bacterium", "coli" ] } ]
                    ]
                  ],
      "items": {
         "type": "object"
      }
    },
    "rank": {
      "type": "string",
      "title": "Taxonomic rank",
      "examples": ["Domain", "Phylum"]
    },
    "numeric_rank": {
      "type": "integer",
      "title": "Taxonomic level"
    },
    "NCBI_taxon_id": {
      "type": "integer",
      "title": "NCBI_taxon_id"
    },
    "genetic_code": {
      "type": "integer",
      "title": "genetic code"
    },
    "GTDB_metadata": {
      "type": "object",
      "title": "GTDB metadata",
      "examples":  [
                      {
                       "total_gap_length": "0",
                       "ssu_gg_blast_evalue": "0",
                       "ncbi_wgs_master": "LHKW00000000.1",
                       "checkm_marker_count": "1169",
                       ....  yada yada
                      }
                   ]
    }
  }
}
